{% extends 'base.html.twig' %}

{% block body %}
    <div>

        {% for message in app.flashes('success') %}
            <div>
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div>
                {{ message }}
            </div>
        {% endfor %}

        <div>
            <div>
                {{ form_start(form) }}
                <div>
                    <div>
                        {{ form_row(form.email) }}
                    </div>
                    <div>
                        {{ form_row(form.password) }}
                    </div>
                </div>
            </div>
            <div>
                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
        <p>
            Not a member?
            <a href="{{ path('app_signup') }}">Create account</a>
        </p>

        <div class="flex flex-col">
            <a href="{{ path('google_connect') }}">Connection with Google</a>
            <a href="{{ path('azure_connect') }}">Connection with Azure</a>
        </div>
    </div>
{% endblock %}